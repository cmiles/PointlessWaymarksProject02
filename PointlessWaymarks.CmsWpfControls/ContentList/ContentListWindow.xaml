<Window
    x:Class="PointlessWaymarks.CmsWpfControls.ContentList.ContentListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarks.CmsWpfControls.ContentList"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:status="clr-namespace:PointlessWaymarks.WpfCommon.Status;assembly=PointlessWaymarks.WpfCommon"
    Title="ContentListWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:ContentListWindow}"
    mc:Ignorable="d">
    <Grid>
        <local:ContentListControl DataContext="{Binding ListContext}" />
        <status:StatusControl
            Grid.Column="0"
            d:IsHidden="true"
            DataContext="{Binding StatusContext}" />
    </Grid>
</Window>
