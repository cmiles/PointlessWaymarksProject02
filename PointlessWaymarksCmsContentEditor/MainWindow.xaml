<Window
    x:Class="PointlessWaymarksCmsContentEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarksCmsContentEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:contentList="clr-namespace:PointlessWaymarksCmsWpfControls.ContentList;assembly=PointlessWaymarksCmsWpfControls"
    xmlns:status="clr-namespace:PointlessWaymarksCmsWpfControls.Status;assembly=PointlessWaymarksCmsWpfControls"
    Title="MainWindow"
    Width="1200"
    Height="600"
    d:DataContext="{d:DesignInstance local:MainWindow}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <contentList:ContentListControl DataContext="{Binding ContextListContext}" />
        <StackPanel Grid.Column="1">
            <Button Command="{Binding GenerateIndexCommand}">Generate Index</Button>
            <Button Command="{Binding PhotoListWindowCommand}">Photo List</Button>
            <Button Command="{Binding NewPhotoContentCommand}">New Photo Content</Button>
            <Button Command="{Binding EditPhotoContentCommand}">Edit Selected Photo</Button>
            <Button Command="{Binding NewPostContentCommand}">New Post</Button>
            <Button Command="{Binding EditPostContentCommand}">Edit Selected Post</Button>
        </StackPanel>
        <status:StatusControl
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            DataContext="{Binding StatusContext}" />
    </Grid>
</Window>