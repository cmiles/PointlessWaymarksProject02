<Window
    x:Class="PointlessWaymarksCmsContentEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarksCmsContentEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:contentList="clr-namespace:PointlessWaymarksCmsWpfControls.ContentList;assembly=PointlessWaymarksCmsWpfControls"
    xmlns:status="clr-namespace:PointlessWaymarksCmsWpfControls.Status;assembly=PointlessWaymarksCmsWpfControls"
    Title="Pointless Waymarks CMS"
    Width="700"
    Height="600"
    d:DataContext="{d:DesignInstance local:MainWindow}"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4" />
            <Setter Property="Height" Value="40" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Margin="12" Command="{Binding GenerateIndexCommand}">Generate Index</Button>
        <Button Grid.Row="1" Margin="12" Command="{Binding OpenIndexUrlCommand}">Open Index</Button>
        <Button Grid.Row="2" Margin="12" Command="{Binding GenerateAllHtmlCommand}">Generate All Html</Button>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Margin="6">
                <Button Command="{Binding PostListWindowCommand}">Post List</Button>
                <Button Command="{Binding PhotoListWindowCommand}">Photo List</Button>
                <Button Command="{Binding ImageListWindowCommand}">Image List</Button>
                <Button Command="{Binding FileListWindowCommand}">File List</Button>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="6">
                <Button Command="{Binding NewPostContentCommand}">New Post</Button>
                <Button Command="{Binding NewPhotoContentCommand}">New Photo Content</Button>
                <Button Command="{Binding NewImageContentCommand}">New Image Content</Button>
                <Button Command="{Binding NewFileContentCommand}">New File Content</Button>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="6">
                <Button Command="{Binding GenerateHtmlForAllPostContentCommand}">Html - All Posts</Button>
                <Button Command="{Binding GenerateHtmlForAllPhotoContentCommand}">Html - All Photos</Button>
                <Button Command="{Binding GenerateHtmlForAllImageContentCommand}">Html - All Images</Button>
                <Button Command="{Binding GenerateHtmlForAllFileContentCommand}">Html - All Files</Button>
            </StackPanel>
        </Grid>
        <status:StatusControl
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            DataContext="{Binding StatusContext}" />
    </Grid>
</Window>