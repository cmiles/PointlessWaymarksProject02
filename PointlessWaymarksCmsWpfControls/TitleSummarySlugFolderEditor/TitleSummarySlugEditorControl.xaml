<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.TitleSummarySlugFolderEditor.TitleSummarySlugEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:stringDataEntry="clr-namespace:PointlessWaymarksCmsWpfControls.StringDataEntry"
    xmlns:titleSummarySlugFolderEditor="clr-namespace:PointlessWaymarksCmsWpfControls.TitleSummarySlugFolderEditor"
    xmlns:utility="clr-namespace:PointlessWaymarksCmsWpfControls.Utility"
    d:DataContext="{d:DesignInstance titleSummarySlugFolderEditor:TitleSummarySlugEditorContext}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical">
            <stringDataEntry:StringDataEntryControl DataContext="{Binding TitleEntry}" />
            <Button
                Margin="6,4,0,0"
                Command="{Binding TitleToSlugCommand}"
                Content="Title to Slug" />
        </StackPanel>
        <stringDataEntry:StringDataEntryControl DataContext="{Binding SlugEntry}" />
        <StackPanel Margin="0,4,0,0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label
                    Content="Folder"
                    Style="{StaticResource DataEntryLabelStyle}"
                    Target="{Binding ElementName=FolderTextBox}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding DbEntry.Folder, StringFormat='Original Value: {0}', FallbackValue='Previously blank'}"
                    IconBrush="Black"
                    IconPathGeometry="{StaticResource IconDataInfo}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding FolderHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding FolderValidationMessage}"
                    IconBrush="Red"
                    IconPathGeometry="{StaticResource IconDataError}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding FolderHasValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
            </StackPanel>
            <ComboBox
                Name="FolderTextBox"
                IsEditable="True"
                ItemsSource="{Binding ExistingFolderChoices}"
                Style="{StaticResource DataEntryComboBoxStyle}"
                Text="{Binding Folder, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <stringDataEntry:StringDataEntryMultiLineControl DataContext="{Binding SummaryEntry}" TextBoxHeight="90" />
    </StackPanel>
</UserControl>