<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.TitleSummarySlugFolderEditor.TitleSummarySlugEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:titleSummarySlugFolderEditor="clr-namespace:PointlessWaymarksCmsWpfControls.TitleSummarySlugFolderEditor"
    xmlns:utility="clr-namespace:PointlessWaymarksCmsWpfControls.Utility"
    d:DataContext="{d:DesignInstance titleSummarySlugFolderEditor:TitleSummarySlugEditorContext}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label
                    Content="_Title"
                    Style="{StaticResource DataEntryLabelStyle}"
                    Target="{Binding ElementName=TitleTextBox}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding DbEntry.Title, StringFormat='Original Value: {0}', FallbackValue='Previously blank'}"
                    IconBrush="Black"
                    IconPathGeometry="{StaticResource IconDataInfo}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding TitleHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding TitleValidationMessage}"
                    IconBrush="Red"
                    IconPathGeometry="{StaticResource IconDataError}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding TitleHasValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
            </StackPanel>
            <TextBox
                Name="TitleTextBox"
                Style="{StaticResource DataEntryTextBoxSingleLineStyle}"
                Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Margin="6,4,0,0"
                Command="{Binding TitleToSlugCommand}"
                Content="T_itle to Slug" />
        </StackPanel>
        <StackPanel Margin="0,4,0,0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label
                    Content="Slug"
                    Style="{StaticResource DataEntryLabelStyle}"
                    Target="{Binding ElementName=SlugTextBox}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding DbEntry.Slug, StringFormat='Original Value: {0}', FallbackValue='Previously blank'}"
                    IconBrush="Black"
                    IconPathGeometry="{StaticResource IconDataInfo}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding SlugHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding SlugValidationMessage}"
                    IconBrush="Red"
                    IconPathGeometry="{StaticResource IconDataError}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding SlugHasValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
            </StackPanel>
            <TextBox
                Name="SlugTextBox"
                Margin="6,2,0,0"
                SpellCheck.IsEnabled="True"
                Style="{StaticResource DataEntryTextBoxSingleLineStyle}"
                Text="{Binding Slug, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Margin="0,4,0,0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label
                    Content="Folder"
                    Style="{StaticResource DataEntryLabelStyle}"
                    Target="{Binding ElementName=FolderTextBox}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding DbEntry.Folder, StringFormat='Original Value: {0}', FallbackValue='Previously blank'}"
                    IconBrush="Black"
                    IconPathGeometry="{StaticResource IconDataInfo}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding FolderHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding FolderValidationMessage}"
                    IconBrush="Red"
                    IconPathGeometry="{StaticResource IconDataError}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding FolderHasValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
            </StackPanel>
            <ComboBox
                Name="FolderTextBox"
                IsEditable="True"
                ItemsSource="{Binding ExistingFolderChoices}"
                Style="{StaticResource DataEntryComboBoxStyle}"
                Text="{Binding Folder, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Margin="0,4,0,0" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label
                    Content="Su_mmary"
                    Style="{StaticResource DataEntryLabelStyle}"
                    Target="{Binding ElementName=SummaryTextBox}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding DbEntry.Summary, StringFormat='Original Value: {0}', FallbackValue='Previously blank'}"
                    IconBrush="Black"
                    IconPathGeometry="{StaticResource IconDataInfo}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding SummaryHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                <utility:IndicatorIcon
                    VerticalAlignment="Center"
                    HoverText="{Binding SummaryValidationMessage}"
                    IconBrush="Red"
                    IconPathGeometry="{StaticResource IconDataError}"
                    IconSize="{StaticResource SmallIconSize}"
                    Visibility="{Binding SummaryHasValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
            </StackPanel>
            <TextBox
                Name="SummaryTextBox"
                Style="{StaticResource DataEntryTextBoxMultiLineStyle}"
                Text="{Binding Summary, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </StackPanel>
</UserControl>