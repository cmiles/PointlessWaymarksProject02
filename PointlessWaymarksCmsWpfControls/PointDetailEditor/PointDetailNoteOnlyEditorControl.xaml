<UserControl x:Class="PointlessWaymarksCmsWpfControls.PointDetailEditor.PointDetailNoteOnlyEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PointlessWaymarksCmsWpfControls.PointDetailEditor"
             xmlns:utility="clr-namespace:PointlessWaymarksCmsWpfControls.Utility"
             xmlns:contentFormat="clr-namespace:PointlessWaymarksCmsWpfControls.ContentFormat"
             xmlns:stringDataEntry="clr-namespace:PointlessWaymarksCmsWpfControls.StringDataEntry"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:CreatePointDetailNoteOnlyEditorContext}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <GroupBox Header="{Binding TypeIdentifier}" Style="{StaticResource UiComponentGroupBoxStyle}">
        <StackPanel Orientation="Vertical">
            <contentFormat:ContentFormatChooserControl DataContext="{Binding NoteFormatEditor}" />
            <stringDataEntry:StringDataEntryMultiLineControl DataContext="{Binding NoteEditor}" Height="90" />
        </StackPanel>
    </GroupBox>
</UserControl>