<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.PointDetailEditor.PointDetailListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarksCmsWpfControls.PointDetailEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:utility="clr-namespace:PointlessWaymarksCmsWpfControls.Utility"
    d:DataContext="{d:DesignInstance local:PointDetailListContext}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="NoteOnlyDetailTemplate">
                <local:PointDetailNoteOnlyEditorControl DataContext="{Binding .}" />
            </DataTemplate>
            <local:PointDetailListControlDataTemplateSelector x:Key="DetailEditorSelector" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Header="Add Detail">
            <ListBox ItemsSource="{Binding AdditionalPointDetailTypes}">
                <ListBox.Resources>
                    <utility:BindingProxy x:Key="Proxy" Data="{Binding}" />
                </ListBox.Resources>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="system:String">
                        <Button
                            Width="140"
                            Command="{Binding Data.LoadNewDetailCommand, Source={StaticResource Proxy}}"
                            CommandParameter="{Binding .}"
                            Content="{Binding .}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="Details">
            <ListBox
                HorizontalContentAlignment="Stretch"
                ItemTemplateSelector="{StaticResource DetailEditorSelector}"
                ItemsSource="{Binding Items}" />
        </GroupBox>
    </Grid>
</UserControl>