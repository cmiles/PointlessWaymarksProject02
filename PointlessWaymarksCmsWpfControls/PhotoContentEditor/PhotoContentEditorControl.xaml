<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.PhotoContentEditor.PhotoContentEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bodyContentEditor="clr-namespace:PointlessWaymarksCmsWpfControls.BodyContentEditor"
    xmlns:contentIdViewer="clr-namespace:PointlessWaymarksCmsWpfControls.ContentIdViewer"
    xmlns:createdAndUpdatedByAndOnDisplay="clr-namespace:PointlessWaymarksCmsWpfControls.CreatedAndUpdatedByAndOnDisplay"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:photoContentEditor="clr-namespace:PointlessWaymarksCmsWpfControls.PhotoContentEditor"
    xmlns:showInMainSiteFeedEditor="clr-namespace:PointlessWaymarksCmsWpfControls.ShowInMainSiteFeedEditor"
    xmlns:tagsEditor="clr-namespace:PointlessWaymarksCmsWpfControls.TagsEditor"
    xmlns:titleSummarySlugFolderEditor="clr-namespace:PointlessWaymarksCmsWpfControls.TitleSummarySlugFolderEditor"
    xmlns:updateNotesEditor="clr-namespace:PointlessWaymarksCmsWpfControls.UpdateNotesEditor"
    xmlns:utility="clr-namespace:PointlessWaymarksCmsWpfControls.Utility"
    xmlns:windowScreenShot="clr-namespace:PointlessWaymarksCmsWpfControls.WindowScreenShot"
    d:DataContext="{d:DesignInstance photoContentEditor:PhotoContentEditorContext}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <utility:BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox Margin="4,0,0,4" Style="{StaticResource UiComponentGroupBoxStyle}">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Label Style="{StaticResource DataEntryLabelStyle}">
                        Photo
                    </Label>
                    <utility:IndicatorIcon
                        VerticalAlignment="Center"
                        HoverText="Selected File Path or Name has Changed"
                        IconBrush="Black"
                        IconPathGeometry="{StaticResource IconDataInfo}"
                        IconSize="{StaticResource SmallIconSize}"
                        Visibility="{Binding SelectedFileHasPathOrNameChanges, Converter={StaticResource BooleanToVisibility}}" />
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Height="28"
                    Margin="4"
                    Command="{Binding ChooseFileAndFillMetadataCommand}"
                    Content="Choose Photo - _Load Metadata" />
                <Button
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Height="28"
                    Margin="4,4,4,18"
                    Command="{Binding ChooseFileCommand}">
                    Choose Photo
                </Button>
                <Image
                    Grid.Row="2"
                    Margin="6,0"
                    Source="{Binding SelectedFileBitmapSource}" />
                <TextBox
                    Grid.Row="3"
                    Margin="4,12,4,12"
                    HorizontalAlignment="Center"
                    Style="{StaticResource ReadOnlyTextBox}"
                    Text="{Binding SelectedFile.FullName, Mode=OneWay}"
                    TextWrapping="Wrap" />
                <WrapPanel
                    Grid.Row="4"
                    Margin="4,0,4,8"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <WrapPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="120" />
                            <Setter Property="Margin" Value="2" />
                        </Style>
                    </WrapPanel.Resources>
                    <Button Command="{Binding RotatePhotoLeftCommand}">Rotate Left</Button>
                    <Button Command="{Binding RotatePhotoRightCommand}">Rotate Right</Button>
                    <Button Command="{Binding ViewPhotoMetadataCommand}">
                        Show Metadata
                    </Button>
                    <Button Command="{Binding ViewSelectedFileCommand}">View Photo</Button>
                    <Button Command="{Binding RenameSelectedFileCommand}">Rename</Button>
                </WrapPanel>
            </Grid>
        </GroupBox>
        <TabControl
            Grid.Row="0"
            Grid.Column="1"
            Margin="4,9,4,5">
            <TabItem Header="Summary">
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="4" CanHorizontallyScroll="False">
                            <titleSummarySlugFolderEditor:TitleSummarySlugEditorControl DataContext="{Binding TitleSummarySlugFolder}" />
                            <showInMainSiteFeedEditor:ShowInMainSiteFeedEditorControl DataContext="{Binding ShowInSiteFeed}" Style="{StaticResource ShowInSiteFeedPanelStyle}" />
                            <tagsEditor:TagsEditorControl DataContext="{Binding TagEdit}" Style="{StaticResource TagsEditorInPanelStyle}" />
                            <createdAndUpdatedByAndOnDisplay:CreatedAndUpdatedByAndOnDisplayControl DataContext="{Binding CreatedUpdatedDisplay}" Style="{StaticResource CreatedUpdatedInPanelStyle}" />
                            <contentIdViewer:ContentIdViewerControl DataContext="{Binding ContentId}" Style="{StaticResource ContentIdInPanelStyle}" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Photo">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <StackPanel Margin="4">
                            <StackPanel Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">Alt Text</Label>
                                <TextBox
                                    MaxLines="2"
                                    MinLines="2"
                                    Style="{StaticResource DataEntryTextBoxMultiLineStyle}"
                                    Text="{Binding AltText, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">Photo Created By</Label>
                                <TextBox Style="{StaticResource DataEntryTextBoxSingleLineStyle}" Text="{Binding PhotoCreatedBy, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">Photo Created On</Label>
                                <TextBox Style="{StaticResource DataEntryTextBoxSingleLineStyle}" Text="{Binding PhotoCreatedOn, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">Camera Make</Label>
                                <TextBox Style="{StaticResource DataEntryTextBoxSingleLineStyle}" Text="{Binding CameraMake, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">Camera Model</Label>
                                <TextBox Style="{StaticResource DataEntryTextBoxSingleLineStyle}" Text="{Binding CameraModel, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">Lens</Label>
                                <TextBox Style="{StaticResource DataEntryTextBoxSingleLineStyle}" Text="{Binding Lens, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">Aperture</Label>
                                <TextBox Style="{StaticResource DataEntryTextBoxSingleLineStyle}" Text="{Binding Aperture, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">Shutter Speed</Label>
                                <TextBox Style="{StaticResource DataEntryTextBoxSingleLineStyle}" Text="{Binding ShutterSpeed, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,4,0,0" Orientation="Vertical">
                                <Label Style="{StaticResource DataEntryLabelStyle}">License</Label>
                                <TextBox Style="{StaticResource DataEntryTextBoxSingleLineStyle}" Text="{Binding License, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Body">
                <Grid>
                    <bodyContentEditor:BodyContentEditorControl DataContext="{Binding BodyContent}" />
                </Grid>
            </TabItem>
            <TabItem Header="Update Notes">
                <Grid>
                    <updateNotesEditor:UpdateNotesEditorHorizontalControl DataContext="{Binding UpdateNotes}" />
                </Grid>
            </TabItem>
        </TabControl>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Style="{StaticResource ActionPanelBorder}">
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Command="{Binding SaveAndGenerateHtmlCommand}"
                    Content="Save, _Generate Html"
                    Style="{StaticResource ActionPanelButton}" />
                <Button
                    Command="{Binding SaveAndGenerateHtmlAndCloseCommand}"
                    Content="Save, _Generate Html, Close"
                    Style="{StaticResource ActionPanelButton}" />
                <Button
                    Command="{Binding SaveUpdateDatabaseCommand}"
                    Content="Quick _Save to DB"
                    Style="{StaticResource ActionPanelButton}" />
                <Button
                    Command="{Binding ViewOnSiteCommand}"
                    Content="_View on Site"
                    Style="{StaticResource ActionPanelButton}" />
            </WrapPanel>
        </Border>
        <windowScreenShot:WindowScreenShotControl
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Bottom" />
    </Grid>
</UserControl>