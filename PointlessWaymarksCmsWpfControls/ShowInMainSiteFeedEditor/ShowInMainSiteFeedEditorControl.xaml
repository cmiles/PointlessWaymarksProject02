<UserControl x:Class="PointlessWaymarksCmsWpfControls.ShowInMainSiteFeedEditor.ShowInMainSiteFeedEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:showInSiteContentEditor="clr-namespace:PointlessWaymarksCmsWpfControls.ShowInSiteContentEditor"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance showInSiteContentEditor:ShowInMainSiteFeedEditorContext}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <CheckBox IsChecked="{Binding ShowInMainSite}" FontWeight="DemiBold" Content="Show Post in Site _Feed" />
    </Grid>
</UserControl>