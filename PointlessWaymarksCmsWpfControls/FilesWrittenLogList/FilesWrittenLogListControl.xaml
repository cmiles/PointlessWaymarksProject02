<UserControl x:Class="PointlessWaymarksCmsWpfControls.FilesWrittenLogList.FilesWrittenLogListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PointlessWaymarksCmsWpfControls.FilesWrittenLogList"
             xmlns:status="clr-namespace:PointlessWaymarksCmsWpfControls.Status"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:FilesWrittenLogListContext}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource ActionPanelBorder}">
                <Border.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Margin" Value="4" />
                        <Setter Property="CornerRadius" Value="4" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="LightGray" />
                    </Style>
                </Border.Resources>
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border>
                        <CheckBox VerticalAlignment="Center" Margin="4"
                                  IsChecked="{Binding FilterForFilesInCurrentGenerationDirectory}">
                            Filter For Generation Directory
                        </CheckBox>
                    </Border>
                    <Border>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="4">
                            <Label>Files Written After:</Label>
                            <ComboBox Width="180" VerticalAlignment="Center" HorizontalContentAlignment="Center"
                                      VerticalContentAlignment="Center" ItemsSource="{Binding GenerationChoices}"
                                      SelectedItem="{Binding SelectedGenerationChoice}" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <StackPanel Margin="4" Orientation="Horizontal" VerticalAlignment="Center">
                            <Label>Remote File Prefix:</Label>
                            <TextBox VerticalAlignment="Center"
                                     Text="{Binding UserFilePrefix, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                                     Width="120" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <StackPanel Margin="4" Orientation="Horizontal" VerticalAlignment="Center">
                            <Label>Script Prefix:</Label>
                            <TextBox VerticalAlignment="Center"
                                     Text="{Binding UserScriptPrefix, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                                     Width="120" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <CheckBox VerticalAlignment="Center" Margin="4"
                                  IsChecked="{Binding ChangeSlashes}">
                            \ to /
                        </CheckBox>
                    </Border>
                </WrapPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource ActionPanelBorder}">
                <Button Margin="4" Width="120" Command="{Binding GenerateItemsCommand}">Run Report</Button>
            </Border>
        </Grid>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" CanUserAddRows="False" AutoGenerateColumns="True" IsReadOnly="True" />
        <Border Grid.Row="2" Style="{StaticResource ActionPanelBorder}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="4" Padding="6,0,6,0" Command="{Binding WrittenFilesToClipboardCommand}">Written Files to Clipboard</Button>
                <Button Margin="4" Command="{Binding ScriptStringsToClipboardCommand}">Script to Clipboard</Button>
            </StackPanel>
        </Border>
        <status:StatusControl
            Grid.Row="0"
            Grid.RowSpan="2"
            d:IsHidden="true"
            DataContext="{Binding StatusContext}" />
    </Grid>
</UserControl>