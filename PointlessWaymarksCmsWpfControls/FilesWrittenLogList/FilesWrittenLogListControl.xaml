<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.FilesWrittenLogList.FilesWrittenLogListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarksCmsWpfControls.FilesWrittenLogList"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:status="clr-namespace:PointlessWaymarksCmsWpfControls.Status"
    d:DataContext="{d:DesignInstance local:FilesWrittenLogListContext}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource ActionPanelBorder}">
                <Border.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Margin" Value="4" />
                        <Setter Property="CornerRadius" Value="4" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="LightGray" />
                    </Style>
                </Border.Resources>
                <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Border>
                        <CheckBox
                            Margin="4"
                            VerticalAlignment="Center"
                            IsChecked="{Binding FilterForFilesInCurrentGenerationDirectory}">
                            Filter For Generation Directory
                        </CheckBox>
                    </Border>
                    <Border>
                        <StackPanel
                            Margin="4"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Label>Files Written After:</Label>
                            <ComboBox
                                Width="180"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                ItemsSource="{Binding GenerationChoices}"
                                SelectedItem="{Binding SelectedGenerationChoice}"
                                DisplayMemberPath="DisplayText"/>
                        </StackPanel>
                    </Border>
                    <Border>
                        <StackPanel
                            Margin="4"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Label>Remote File Prefix:</Label>
                            <TextBox
                                Width="120"
                                VerticalAlignment="Center"
                                Text="{Binding UserFilePrefix, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <StackPanel
                            Margin="4"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Label>Script Prefix:</Label>
                            <TextBox
                                Width="120"
                                VerticalAlignment="Center"
                                Text="{Binding UserScriptPrefix, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <CheckBox
                            Margin="4"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ChangeSlashes}">
                            \ to /
                        </CheckBox>
                    </Border>
                </WrapPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource ActionPanelBorder}">
                <Button
                    Width="120"
                    Margin="4"
                    Command="{Binding GenerateItemsCommand}">
                    Run Report
                </Button>
            </Border>
        </Grid>
        <DataGrid
            x:Name="WrittenFilesDataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            CanUserResizeColumns="True"
            AlternationCount="1"
            AlternatingRowBackground="LightGray"
            ItemsSource="{Binding Items}"
            SelectionChanged="Selector_OnSelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Written On" Binding="{Binding WrittenOn}"></DataGridTextColumn>
                <DataGridTextColumn Header="File" Binding="{Binding FileBase}"></DataGridTextColumn>
                <DataGridCheckBoxColumn Header="In Generated" Binding="{Binding IsInGenerationDirectory}"></DataGridCheckBoxColumn>
                <DataGridTextColumn Header="Remote File" Binding="{Binding TransformedFile}"></DataGridTextColumn>
                <DataGridTextColumn Header="Written File" Binding="{Binding WrittenFile}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Border Grid.Row="2" Style="{StaticResource ActionPanelBorder}">
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <WrapPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="4"></Setter>
                        <Setter Property="Padding" Value="6,0,6,0"></Setter>
                    </Style>
                </WrapPanel.Resources>
                <Button
                    Command="{Binding WrittenFilesToClipboardCommand}">
                    Written Files to Clipboard
                </Button>
                <Button 
                    Command="{Binding ScriptStringsToClipboardCommand}">Script to Clipboard - All Items</Button>
                <Button 
                    Command="{Binding SelectedScriptStringsToClipboardCommand}">Script to Clipboard - Selected Items</Button>
                <Button 
                    Command="{Binding ScriptStringsToPowerShellScriptCommand}">Script to File - All Items</Button>
                <Button 
                    Command="{Binding SelectedScriptStringsToPowerShellScriptCommand}">Script to File - Selected Items</Button>
            </WrapPanel>
        </Border>
        <status:StatusControl
            Grid.Row="0"
            Grid.RowSpan="2"
            d:IsHidden="true"
            DataContext="{Binding StatusContext}" />
    </Grid>
</UserControl>