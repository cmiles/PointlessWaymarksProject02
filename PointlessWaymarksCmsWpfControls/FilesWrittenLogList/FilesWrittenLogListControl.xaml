<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.FilesWrittenLogList.FilesWrittenLogListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarksCmsWpfControls.FilesWrittenLogList"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:status="clr-namespace:PointlessWaymarksCmsWpfControls.Status"
    d:DataContext="{d:DesignInstance local:FilesWrittenLogListContext}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource ActionPanelBorder}">
                <Border.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Margin" Value="4" />
                        <Setter Property="CornerRadius" Value="4" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="LightGray" />
                    </Style>
                </Border.Resources>
                <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Border>
                        <CheckBox
                            Margin="4"
                            VerticalAlignment="Center"
                            IsChecked="{Binding FilterForFilesInCurrentGenerationDirectory}">
                            Filter For Generation Directory
                        </CheckBox>
                    </Border>
                    <Border>
                        <StackPanel
                            Margin="4"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Label>Files Written After:</Label>
                            <ComboBox
                                Width="180"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                ItemsSource="{Binding GenerationChoices}"
                                SelectedItem="{Binding SelectedGenerationChoice}" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <StackPanel
                            Margin="4"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Label>Remote File Prefix:</Label>
                            <TextBox
                                Width="120"
                                VerticalAlignment="Center"
                                Text="{Binding UserFilePrefix, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <StackPanel
                            Margin="4"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Label>Script Prefix:</Label>
                            <TextBox
                                Width="120"
                                VerticalAlignment="Center"
                                Text="{Binding UserScriptPrefix, UpdateSourceTrigger=PropertyChanged, Delay=300}" />
                        </StackPanel>
                    </Border>
                    <Border>
                        <CheckBox
                            Margin="4"
                            VerticalAlignment="Center"
                            IsChecked="{Binding ChangeSlashes}">
                            \ to /
                        </CheckBox>
                    </Border>
                </WrapPanel>
            </Border>
            <Border Grid.Column="1" Style="{StaticResource ActionPanelBorder}">
                <Button
                    Width="120"
                    Margin="4"
                    Command="{Binding GenerateItemsCommand}">
                    Run Report
                </Button>
            </Border>
        </Grid>
        <DataGrid
            Grid.Row="1"
            AutoGenerateColumns="True"
            CanUserAddRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding Items}" />
        <Border Grid.Row="2" Style="{StaticResource ActionPanelBorder}">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Margin="4"
                    Padding="6,0,6,0"
                    Command="{Binding WrittenFilesToClipboardCommand}">
                    Written Files to Clipboard
                </Button>
                <Button Margin="4" Command="{Binding ScriptStringsToClipboardCommand}">Script to Clipboard</Button>
            </StackPanel>
        </Border>
        <status:StatusControl
            Grid.Row="0"
            Grid.RowSpan="2"
            d:IsHidden="true"
            DataContext="{Binding StatusContext}" />
    </Grid>
</UserControl>