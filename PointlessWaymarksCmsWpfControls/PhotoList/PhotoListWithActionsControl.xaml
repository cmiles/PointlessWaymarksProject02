<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.PhotoList.PhotoListWithActionsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PointlessWaymarksCmsWpfControls.PhotoList"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:status="clr-namespace:PointlessWaymarksCmsWpfControls.Status"
    d:DataContext="{d:DesignInstance local:PhotoListWithActionsContext}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="240" />
        </Grid.ColumnDefinitions>
        <local:PhotoListControl Margin="4,5,4,6" DataContext="{Binding ListContext}" />
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button Command="{Binding RefreshDataCommand}" Style="{StaticResource LargerButton}">Refresh</Button>
            <Button Command="{Binding EditSelectedContentCommand}" Style="{StaticResource LargerButton}">Edit</Button>
            <Button Command="{Binding GenerateSelectedHtmlCommand}" Style="{StaticResource LargerButton}">Generate Html</Button>
            <Button Command="{Binding PhotoCodesToClipboardForSelectedCommand}" Style="{StaticResource LargerButton}">Photo Code to Clipboard</Button>
            <Button Command="{Binding OpenUrlForSelectedCommand}" Style="{StaticResource LargerButton}">Open Selected in Browser</Button>
            <Button Command="{Binding GeneratePhotoListCommand}" Style="{StaticResource LargerButton}">Generate Photo List</Button>
            <Button Command="{Binding OpenUrlForPhotoListCommand}" Style="{StaticResource LargerButton}">Open Photo List in Browser</Button>
            <Button Command="{Binding NewContentCommand}" Style="{StaticResource LargerButton}">New Content</Button>
        </StackPanel>
        <Button
            Grid.Column="1"
            Margin="4,4,4,6"
            VerticalAlignment="Bottom"
            Command="{Binding DeleteSelectedCommand}"
            Style="{StaticResource LargerButton}">
            Delete
        </Button>
        <status:StatusControl
            Grid.Column="0"
            Grid.ColumnSpan="2"
            d:IsHidden="true"
            DataContext="{Binding StatusContext}" />
    </Grid>
</UserControl>