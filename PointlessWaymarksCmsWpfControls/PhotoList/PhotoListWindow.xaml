<Window x:Class="PointlessWaymarksCmsWpfControls.PhotoList.PhotoListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:photoList="clr-namespace:PointlessWaymarksCmsWpfControls.PhotoList"
        xmlns:status="clr-namespace:PointlessWaymarksCmsWpfControls.Status"
        mc:Ignorable="d"
        Title="PhotoListWindow" Height="800" Width="800" d:DataContext="{d:DesignInstance photoList:PhotoListWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <photoList:PhotoListControl DataContext="{Binding ListContext}" />
        <StackPanel Grid.Row="1" Margin="4" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Command="{Binding EditSelectedContentCommand}">Edit</Button>
            <Button Command="{Binding GenerateSelectedHtmlCommand}">Generate Html</Button>
            <Button Command="{Binding PhotoCodesToClipboardForSelectedCommand}">Photo Code to Clipboard</Button>
        </StackPanel>
        <status:StatusControl Grid.Row="0" Grid.RowSpan="2" d:IsHidden="true"
                              DataContext="{Binding StatusContext}" />
    </Grid>
</Window>