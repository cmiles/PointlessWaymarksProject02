<UserControl
    x:Class="PointlessWaymarksCmsWpfControls.PointContentEditor.PointContentEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bodyContentEditor="clr-namespace:PointlessWaymarksCmsWpfControls.BodyContentEditor"
    xmlns:contentIdViewer="clr-namespace:PointlessWaymarksCmsWpfControls.ContentIdViewer"
    xmlns:createdAndUpdatedByAndOnDisplay="clr-namespace:PointlessWaymarksCmsWpfControls.CreatedAndUpdatedByAndOnDisplay"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpDisplay="clr-namespace:PointlessWaymarksCmsWpfControls.HelpDisplay"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pointContentEditor="clr-namespace:PointlessWaymarksCmsWpfControls.PointContentEditor"
    xmlns:showInMainSiteFeedEditor="clr-namespace:PointlessWaymarksCmsWpfControls.ShowInMainSiteFeedEditor"
    xmlns:tagsEditor="clr-namespace:PointlessWaymarksCmsWpfControls.TagsEditor"
    xmlns:titleSummarySlugFolderEditor="clr-namespace:PointlessWaymarksCmsWpfControls.TitleSummarySlugFolderEditor"
    xmlns:updateNotesEditor="clr-namespace:PointlessWaymarksCmsWpfControls.UpdateNotesEditor"
    xmlns:utility="clr-namespace:PointlessWaymarksCmsWpfControls.Utility"
    xmlns:windowScreenShot="clr-namespace:PointlessWaymarksCmsWpfControls.WindowScreenShot"
    d:DataContext="{d:DesignInstance pointContentEditor:PointContentEditorContext}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../WpfControlsResourceDictionary.xaml" />
                <ResourceDictionary Source="../Utility/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="Summary">
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="4" CanHorizontallyScroll="False">
                            <titleSummarySlugFolderEditor:TitleSummarySlugEditorControl DataContext="{Binding TitleSummarySlugFolder}" />
                            <showInMainSiteFeedEditor:ShowInMainSiteFeedEditorControl DataContext="{Binding ShowInSiteFeed}" Style="{StaticResource ShowInSiteFeedPanelStyle}" />
                            <tagsEditor:TagsEditorControl DataContext="{Binding TagEdit}" Style="{StaticResource TagsEditorInPanelStyle}" />
                            <createdAndUpdatedByAndOnDisplay:CreatedAndUpdatedByAndOnDisplayControl DataContext="{Binding CreatedUpdatedDisplay}" Style="{StaticResource CreatedUpdatedInPanelStyle}" />
                            <contentIdViewer:ContentIdViewerControl DataContext="{Binding ContentId}" Style="{StaticResource ContentIdInPanelStyle}" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Point">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <GroupBox Margin="4,0,0,4" Style="{StaticResource UiComponentGroupBoxStyle}">
                        <StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        Content="Latitude"
                                        Style="{StaticResource DataEntryLabelStyle}"
                                        Target="{Binding ElementName=LatitudeTextBox}" />
                                    <utility:IndicatorIcon
                                        VerticalAlignment="Center"
                                        HoverText="{Binding DbEntry.Latitude, StringFormat='Original Value: {0}', FallbackValue='Previously blank'}"
                                        IconBrush="Black"
                                        IconPathGeometry="{StaticResource IconDataInfo}"
                                        IconSize="{StaticResource SmallIconSize}"
                                        Visibility="{Binding LatitudeHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                                    <utility:IndicatorIcon
                                        VerticalAlignment="Center"
                                        HoverText="{Binding LatitudeValidationMessage}"
                                        IconBrush="Red"
                                        IconPathGeometry="{StaticResource IconDataError}"
                                        IconSize="{StaticResource SmallIconSize}"
                                        Visibility="{Binding LatitudeHasValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
                                </StackPanel>
                                <TextBox
                                    Name="LatitudeTextBox"
                                    Margin="6,2,0,0"
                                    SpellCheck.IsEnabled="True"
                                    Style="{StaticResource DataEntryTextBoxSingleLineStyle}"
                                    Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        Content="Longitude"
                                        Style="{StaticResource DataEntryLabelStyle}"
                                        Target="{Binding ElementName=LongitudeTextBox}" />
                                    <utility:IndicatorIcon
                                        VerticalAlignment="Center"
                                        HoverText="{Binding DbEntry.Longitude, StringFormat='Original Value: {0}', FallbackValue='Previously blank'}"
                                        IconBrush="Black"
                                        IconPathGeometry="{StaticResource IconDataInfo}"
                                        IconSize="{StaticResource SmallIconSize}"
                                        Visibility="{Binding LongitudeHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                                    <utility:IndicatorIcon
                                        VerticalAlignment="Center"
                                        HoverText="{Binding LongitudeValidationMessage}"
                                        IconBrush="Red"
                                        IconPathGeometry="{StaticResource IconDataError}"
                                        IconSize="{StaticResource SmallIconSize}"
                                        Visibility="{Binding LongitudeHasValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
                                </StackPanel>
                                <TextBox
                                    Name="LongitudeTextBox"
                                    Margin="6,2,0,0"
                                    SpellCheck.IsEnabled="True"
                                    Style="{StaticResource DataEntryTextBoxSingleLineStyle}"
                                    Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label
                                        Content="Elevation"
                                        Style="{StaticResource DataEntryLabelStyle}"
                                        Target="{Binding ElementName=ElevationTextBox}" />
                                    <utility:IndicatorIcon
                                        VerticalAlignment="Center"
                                        HoverText="{Binding DbEntry.Elevation, StringFormat='Original Value: {0}', FallbackValue='Previously blank'}"
                                        IconBrush="Black"
                                        IconPathGeometry="{StaticResource IconDataInfo}"
                                        IconSize="{StaticResource SmallIconSize}"
                                        Visibility="{Binding ElevationHasChanges, Converter={StaticResource BooleanToVisibility}}" />
                                    <utility:IndicatorIcon
                                        VerticalAlignment="Center"
                                        HoverText="{Binding ElevationValidationMessage}"
                                        IconBrush="Red"
                                        IconPathGeometry="{StaticResource IconDataError}"
                                        IconSize="{StaticResource SmallIconSize}"
                                        Visibility="{Binding ElevationHasValidationIssues, Converter={StaticResource BooleanToVisibility}}" />
                                </StackPanel>
                                <TextBox
                                    Name="ElevationTextBox"
                                    Margin="6,2,0,0"
                                    SpellCheck.IsEnabled="True"
                                    Style="{StaticResource DataEntryTextBoxSingleLineStyle}"
                                    Text="{Binding Elevation, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Body">
                <Grid>
                    <bodyContentEditor:BodyContentEditorControl DataContext="{Binding BodyContent}" />
                </Grid>
            </TabItem>
            <TabItem Header="Update Notes">
                <Grid>
                    <updateNotesEditor:UpdateNotesEditorVerticalControl DataContext="{Binding UpdateNotes}" />
                </Grid>
            </TabItem>
            <TabItem Header="Help">
                <helpDisplay:HelpDisplayControl DataContext="{Binding HelpContext}" />
            </TabItem>
        </TabControl>
        <Border Grid.Row="1" Style="{StaticResource ActionPanelBorder}">
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Command="{Binding SaveAndGenerateHtmlCommand}"
                    Content="Save, _Generate Html"
                    Style="{StaticResource ActionPanelButton}" />
                <Button
                    Command="{Binding ExtractNewLinksCommand}"
                    Content="_Extract New Links"
                    Style="{StaticResource ActionPanelButton}" />
                <Button
                    Command="{Binding ViewOnSiteCommand}"
                    Content="_View on Site"
                    Style="{StaticResource ActionPanelButton}" />
            </WrapPanel>
        </Border>
        <windowScreenShot:WindowScreenShotControl
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Bottom" />
    </Grid>
</UserControl>