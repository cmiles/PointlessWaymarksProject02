<UserControl x:Class="TheLemmonWorkshopWpfControls.PhotoContentEditor.PhotoContentEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TheLemmonWorkshopWpfControls.PhotoContentEditor"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:PhotoContentEditorContext}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <TextBlock>Slug</TextBlock>
                <TextBox Text="{Binding Slug}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Title</TextBlock>
                <TextBox Text="{Binding Title}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Alt Text</TextBlock>
                <TextBox Text="{Binding AltText}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Description</TextBlock>
                <TextBox Text="{Binding Camera}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Photographer</TextBlock>
                <TextBox Text="{Binding PhotoCreatedBy}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Photo Created On</TextBlock>
                <TextBox Text="{Binding PhotoCreatedOn}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Camera</TextBlock>
                <TextBox Text="{Binding Camera}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Lens</TextBlock>
                <TextBox Text="{Binding Lens}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Aperture</TextBlock>
                <TextBox Text="{Binding Aperture}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Shutter Speed</TextBlock>
                <TextBox Text="{Binding ShutterSpeed}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Base File Name</TextBlock>
                <TextBox Text="{Binding BaseFileName}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Current Update By</TextBlock>
                <TextBox Text="{Binding }" />
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical">
                <TextBlock>Fingerprint</TextBlock>
                <TextBlock Text="{Binding Fingerprint}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Page Created On</TextBlock>
                <TextBlock Text="{Binding PageCreatedOn}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Page Created By</TextBlock>
                <TextBlock Text="{Binding PageCreatedBy}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Page Last Updated On</TextBlock>
                <TextBlock Text="{Binding PageCreatedOn}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Page Last Updated By</TextBlock>
                <TextBlock Text="{Binding PageCreatedBy}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>