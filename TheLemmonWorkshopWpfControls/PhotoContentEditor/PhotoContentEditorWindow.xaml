<Window
    x:Class="TheLemmonWorkshopWpfControls.PhotoContentEditor.PhotoContentEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TheLemmonWorkshopWpfControls.PhotoContentEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PhotoContentEditorWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:PhotoContentEditorWindow}"
    mc:Ignorable="d">
    <Grid>
        <local:PhotoContentEditorControl DataContext="{Binding PhotoContentEditor}" />
    </Grid>
</Window>