<Window x:Class="TheLemmonWorkshopWpfControls.HtmlViewer.HtmlViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TheLemmonWorkshopWpfControls.HtmlViewer"
        xmlns:wpfHtml="clr-namespace:TheLemmonWorkshopWpfControls.WpfHtml"
        mc:Ignorable="d"
        Title="HtmlViewerWindow" Height="450" Width="800" d:DataContext="{d:DesignInstance local:HtmlViewerContext}">
    <Grid>
        <WebBrowser wpfHtml:BrowserHtmlBindingBehavior.Html="{Binding HtmlString}" />
    </Grid>
</Window>