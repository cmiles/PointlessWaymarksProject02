<Window x:Class="TheLemmonWorkshopWpfControls.PostContentEditor.PostContentEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TheLemmonWorkshopWpfControls.PostContentEditor"
        xmlns:controlStatus="clr-namespace:TheLemmonWorkshopWpfControls.ControlStatus"
        mc:Ignorable="d"
        Title="PostContentEditorWindow" Height="450" Width="800">
    <Grid>
        <local:PostContentEditorControl DataContext="{Binding PostContent}" />
        <controlStatus:StatusControl Grid.Column="0" Grid.ColumnSpan="2" d:IsHidden="true"
                                     DataContext="{Binding StatusContext}" />
    </Grid>
</Window>