<UserControl
    x:Class="TheLemmonWorkshopWpfControls.MainImageFormat.MainImageFormatChooser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Label Target="{Binding ElementName=MainImageFormatTypeComboBox}">Format Type</Label>
        <ComboBox
            Name="MainImageFormatTypeComboBox"
            Grid.Column="1"
            ItemsSource="{Binding ContentFormatChoices}"
            SelectedItem="{Binding SelectedContentFormat}" />
    </Grid>
</UserControl>