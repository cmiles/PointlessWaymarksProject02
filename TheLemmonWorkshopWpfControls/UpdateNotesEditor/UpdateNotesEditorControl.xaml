<UserControl x:Class="TheLemmonWorkshopWpfControls.UpdateNotesEditor.UpdateNotesEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TheLemmonWorkshopWpfControls.UpdateNotesEditor"
             xmlns:contentFormat="clr-namespace:TheLemmonWorkshopWpfControls.ContentFormat"
             xmlns:wpfHtml="clr-namespace:TheLemmonWorkshopWpfControls.WpfHtml"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" Header="Format Type">
                <contentFormat:ContentFormatChooserControl DataContext="{Binding UpdateNotesFormatContext}" />
            </GroupBox>
            <Grid Grid.Row="1" Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <GroupBox Header="Content">
                    <TextBox
                        AcceptsReturn="True"
                        Text="{Binding UserContent.UpdateNotes, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Visible" />
                </GroupBox>
                <GroupBox Grid.Column="1" Header="Preview">
                    <WebBrowser
                        wpfHtml:BrowserHtmlBindingBehavior.Html="{Binding UserContent.UpdateNotesHtmlOutput}" />
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>